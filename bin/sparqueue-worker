#!/usr/bin/env python

import sys
import signal

import sparqueue.worker

def signal_handler(signal, frame):
    global RUN
    RUN = False

if __name__ == '__main__':
    signal.signal(signal.SIGINT, signal_handler)
    if len(sys.argv) != 2:
        print 'Usage: %s config.json' % sys.argv[0]
        exit(1)
    sparqueue.worker.execute(sys.argv[1])
